[Unit]
Description=Watch Party RDS Password Sync Timer
Documentation=https://github.com/EL-HOUSS-BRAHIM/watch-party
Requires=watchparty-password-sync.service

[Timer]
# Run every hour
OnCalendar=hourly
# Run 5 minutes after boot
OnBootSec=5min
# Add some randomization to avoid all instances syncing at the same time
RandomizedDelaySec=300
Persistent=true

[Install]
WantedBy=timers.target