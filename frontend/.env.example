# Production Environment Variables Template
# Copy this file to .env.local and fill in your production values

# ============================================
# BACKEND API CONFIGURATION
# ============================================
# The frontend now makes DIRECT requests to the backend API
# No more API routes in Next.js - all requests go straight to Django!

# Backend API URL - Used by the browser (client-side)
# This MUST be accessible from the user's browser
# Production: https://be-watch-party.brahim-elhouss.me
# Local dev:  http://localhost:8000 (or your backend port)
NEXT_PUBLIC_API_URL=https://be-watch-party.brahim-elhouss.me

# WebSocket URL for real-time features
# Production: wss://be-watch-party.brahim-elhouss.me/ws
# Local dev:  ws://localhost:8000/ws
NEXT_PUBLIC_WS_URL=wss://be-watch-party.brahim-elhouss.me/ws

# Optional: Alternative backend URL name (for backwards compatibility)
NEXT_PUBLIC_BACKEND_URL=https://be-watch-party.brahim-elhouss.me

# ============================================
# DEPRECATED VARIABLES (NO LONGER USED)
# ============================================
# These variables are no longer needed since we removed API routes:
# - BACKEND_URL (was used by server-side API routes)
# - NEXT_PUBLIC_FRONTEND_API (was used to route to /api/*)

# ============================================
# OPTIONAL FEATURES
# ============================================
# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_DRIVE=true
NEXT_PUBLIC_ENABLE_DISCORD=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
